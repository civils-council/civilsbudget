{% extends "@App/layout.html.twig" %}

{% block title %}
    Проекти
{% endblock title %}

{% block content %}
	    <div id="hp-logo"></div>
		<h1 id="hp-title">
			Громадський бюджет в місті Черкаси 2015
		</h1>

    {% for project in projects %}
        {% if loop.index % 4 == 1 %}
         <div class="row">
        {% endif %}

        <div class="col-md-3  item-content">
            <div class="wrap-item">
                <div class="card" id="project{{ project.id }}">
                    <div class="card-image">
                        <a href="{{ path('projects_show', { id: project.id }) }}" class="img-lnk">
                            <img src="{% if project.picture %} {{ asset(project.picture) }} {% else %} {{ asset('bundles/app/img/gerb_goroda_cherkassy_abali.ru_.png') }} {% endif %}" class="img-responsive" alt="">
                        </a>
                    </div><!-- card image -->

                    <div class="card-content">
                        <h2 class="item-title">{{ project.title|humanize }}</h2>
                    </div><!-- card content -->
                    <div class="item-excerpt">
                        <span>{{ project.description[:70] ~'...' }}</span>
                        <button type="button" class="btn btn-custom pull-right cards desc-btn" aria-label="Left Align" data-value="project{{ project.id }}">
                            <i class="fa fa-ellipsis-v" data-value="project{{ project.id }}"></i>
                        </button>
                    </div><!-- card actions -->
                    <div class="item-meta">
                        <div>Створено: <span>{{ project.createAt|date('d-m-Y') }}</span></div>
                        <div>Підтримало: <span>{{ project.likedUsers|length|number_format(0, '.', ' ') }}</span></div>
                        <div>Бюджет: <span>{{ project.charge|number_format(0, '.', ' ') }}</span> грн.</div>
                    </div>
                    <div class="card-reveal">
                        <span class="card-title">{{ project.title }}</span> <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                        <p>
                            {{ project.description }}
                        </p>
                    </div><!-- card reveal -->
                    <a href="{{ path('projects_show', { id: project.id }) }}" class="detail-btn">детальніше</a>
                </div>
            </div>
        </div>
        {% if loop.index % 4 == 0 %}
        </div>
        {% endif %}
    {% endfor %}
{% endblock content %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/project_list.js') }}"></script>
{% endblock %}