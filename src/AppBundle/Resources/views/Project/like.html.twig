{% extends "base.html.twig" %}

{% block body %}
    {{ form(form) }}
{% endblock %}

{% form_theme form _self %}

{% block button_size %}btn btn-info read_more {{ app.user is null ? 'not_auth' }} {% endblock button_size %}
{% block button_label %}{% endblock button_label %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $('form[name=like_form]').submit(function (e) {
            var user = '{{ app.user ? app.user.fullName }}';
            if (!user) {
                e.preventDefault();
            }
        });
    </script>
{% endblock javascripts %}