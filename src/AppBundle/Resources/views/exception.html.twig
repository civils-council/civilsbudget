{% extends "::base.html.twig" %}

{% block body %}
    <title>{% block title %}Вибачте за тимчасові незручності. Доступ до сервісу BankID тимчасово відсутній. Спробуйте ще раз пізніше.{% endblock %}</title>
    {{ block("menu") }}
    <div class="container">
        <div class="bs-docs-section">
            {{ block("header") }}
            {{ block("flash") }}
            {#{{ block("content") }}#}
        </div>
        {{ block("footer") }}
    </div>

{% endblock body %}

{% block content %}{% endblock content %}
{% block footer %}
    <footer>
        <div class="row">
            <div class="col-lg-12">

            </div>
        </div>
    </footer>
{% endblock footer %}

{% block menu %}
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a href="{{ path("homepage") }}" class="navbar-brand">Лого</a>
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse" id="navbar-main">
                <ul class="nav navbar-nav">
                    {#{{ dump(is_granted('ROLE_USER'), is_granted('ROLE_ADMIN')) }}#}
                        {% if app.user and is_granted('ROLE_USER') %}
                        <li><a href="{{ path('projects_add') }}">Add Project User</a></li>
                    {% endif %}
                    {% if app.user and is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('admin_projects_add') }}">Add Project Admin</a></li>
                    {% endif %}
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li>
                        {% if app.user %}
                            <a href="{{ path('logout') }}">Вихід</a>
                        {% elseif app.request.get('_route') != 'login' %}
                            <a href="" data-toggle="modal" data-target="#login-modal">Увійти</a>
                        {% endif %}
                    </li>
                </ul>

            </div>
        </div>
    </div>

{% endblock menu %}

{% block header %}
    <div class="page-header">
        <div class="row">
            <div class="col-lg-12">
                <h1 id="buttons">{{ block('title') }}</h1>
            </div>
        </div>
    </div>
{% endblock header %}
